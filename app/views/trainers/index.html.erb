<h2><%= link_to "Become a Trainer", new_trainer_path(@user), class: "btn btn-primary col-4"%></h2>
<h2><%= link_to "Back to Home", root_path, class: "btn btn-dark" %></h2>

<div class="d-flex card" style="width: 18rem;">
  <!-- <img src="..." class="card-img-top" alt="..."> -->
     <div class="card-body">
      <% @trainers.each do |trainer| %>
         <h5 class="card-title"><%= link_to trainer.user.first_name, new_trainer_booking_path(trainer) %></h5>
          <p class="card-text"><%= trainer.about_me %></p>
          <p class="card-text"><%= trainer.level %></p>
          <p class="card-text"><%= trainer.discipline %></p>
          <h3 class="card-text"><%= trainer.price %></h3>
      <% end %>
      </div>
</div>


