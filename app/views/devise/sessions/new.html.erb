<div class= "" style= "background-image: url(/views/assets/images/Ropes.jpg;)">
  <div class="card-transparent border-dark mb-3 mx-auto col-md-4 py-3 shadow-sm rounded">
    <h2>WELCOME TO KYMSGYMS <i class="fas fa-running"></i></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", input_html: { class: 'btn' } %>
      <%= render "devise/shared/links", input_html: { class: 'xtrabtn' }  %>
      <br>
    </div>
  <% end %>

  </div>
