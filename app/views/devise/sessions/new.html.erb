<div style="background-image: url('views/assets/images/sport.jpg');"></div>
  <div class="card border-light mb-3 mx-auto col-md-4 py-3">
    <h2>WELCOME TO KYMSGYMS <i class="fas fa-running"></i></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", input_html: { class: 'btn' } %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
